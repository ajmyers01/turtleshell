<div id="main-content" class="container individual-wrapper">
  <div class="row">
    <div class="col-xs-12">
      <h3 class="text-center"><%= current_user.first_name %>'s tasks - <%= Date.today.strftime("%B #{Date.today.day.ordinalize}, %Y") %> </h3>
    </div>
  </div>

  <div class="row" style="padding-top:20px;">
    <div class="col-xs-12">
      <table class="table">
        <thead>

          <form class="form-inline">
            <tr class="well">
              <th> </th>
              <th>
                <input type="text" placeholder="Name" class="form-control" id="name">
              </th>
              <th>
                <div class="form-group">
                  <input type="text" placeholder="Description" class="form-control" id="description">
                </div>
              </th>
              <th>
                <button type="submit" class="btn btn-info btn-raised btn-xs js-create-task pull-right" rel="tooltip" title"Add Task"> <i class="fa fa-plus"></i></button>
              </th>
            </tr>
          </form>
        </thead>
        <tbody>
          <% @tasks.each do |task| %>
            <tr class="js-habit-<%= task.id %>">
              <td class="td-actions text-right">
                <div class="btn btn-success btn-raised btn-xs js-complete-task" type="button" rel="tooltip" title="Complete" id="<%= task.id %>"> <i class="fa fa-check"></i> </div>
              </td>
              <td><%= task.name %></td>
              <td><%= task.description %></td>
              <td class="td-actions text-right">
                <div class="btn btn-danger btn-raised btn-xs js-delete-task" type="button" rel="tooltip" title="Remove" id="<%= task.id %>"> <i class="fa fa-times"></i> </div>
              </td>
            </tr>
          <% end %>

        </tbody>
      </table>
    </div>
  </div>
</div>
