<!DOCTYPE html>
<html>
<head>
  <title>Payment</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller_name %> <%= action_name %>">
  <% if logged_in? %>
    <%= render partial: 'shared/header' %>
  <% end %>
  <div class="container">
    <%= render partial: 'shared/flash_partial' %>
  </div>
<%= yield %>

</body>
</html>
