<div id="main-content" class="container individual-wrapper">
  <div class="row">
    <div class="col-xs-12">
      <h1 class="individual-wrapper">Log In</h1>
      <%= form_for(:session, url: login_path) do |f| %>
        <div class="form-group label-floating">
          <label class="control-label">Email Address</label>
          <%= f.email_field :email,
                            class: 'form-control',
                            'data-validators' => %w(notEmpty) %>
        </div>
        <div class="form-group label-floating">
          <label class="control-label">Password</label>
          <%= f.password_field :password,
                               class: 'form-control',
                               'data-validators' => %w(notEmpty) %>
        </div>
        <div class="btn-wrapper">
          <%= f.submit 'Log in', class: 'btn btn-raised btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
