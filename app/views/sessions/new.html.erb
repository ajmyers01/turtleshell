<div id="main-content" class="container individual-wrapper">
  <div class="row" style="padding-top: 10%;">
    <div class="well col-xs-12 col-md-6 col-md-offset-3">
      <h1 class="individual-wrapper" style="padding-bottom: 10px;">Log In</h1>
      <%= form_for(:session, url: login_path) do |f| %>
        <div class="form-group label-floating">
          <label class="control-label">Email Address</label>
          <%= f.email_field :email,
                            class: 'form-control',
                            'data-validators' => %w(notEmpty) %>
        </div>
        <div class="form-group label-floating">
          <label class="control-label">Password</label>
          <%= f.password_field :password,
                               class: 'form-control',
                               'data-validators' => %w(notEmpty) %>
        </div>
        <div class="btn-wrapper">
          <%= f.submit 'Log in', class: 'btn btn-raised btn-primary' %>
          <%= link_to "Create an Account", new_user_path %>
        </div>
      <% end %>
    </div>
  </div>
</div>
